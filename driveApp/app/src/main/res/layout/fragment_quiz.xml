<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 顶部进度条 -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:progressTint="@color/primary_yellow" />

    <!-- 题目区域 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 题型标签 -->
            <TextView
                android:id="@+id/tv_question_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单选题"
                android:textSize="12sp"
                android:textColor="@color/primary_blue"
                android:background="@drawable/bg_tag_question_type"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginBottom="12dp" />

            <!-- 题目内容 -->
            <TextView
                android:id="@+id/tv_question_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="驾驶机动车在道路上违反道路交通安全法的行为，属于什么行为？"
                android:textSize="17sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp" />

            <!-- 选项列表 -->
            <LinearLayout
                android:id="@+id/layout_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <!-- 选项由代码动态生成 -->
                <!-- 示例选项布局 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_option_A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/border_gray"
                    app:strokeWidth="1dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- 选项圆圈 -->
                        <TextView
                            android:id="@+id/tv_option_circle"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="A"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:background="@drawable/bg_option_circle" />

                        <!-- 选项文本 -->
                        <TextView
                            android:id="@+id/tv_option_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="违章行为"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- 解析区域 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_analysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/background_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- 解析标题 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="16dp"
                            android:background="@color/primary_yellow"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="试题详解"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- 解析内容 -->
                    <TextView
                        android:id="@+id/tv_analysis_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="解析内容..."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:lineSpacingExtra="6dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 底部工具栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        android:elevation="4dp">

        <!-- 收藏按钮 -->
        <LinearLayout
            android:id="@+id/btn_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star_outline"
                android:tint="@color/text_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- 操作按钮组 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:padding="8dp"
                android:foreground="?android:attr/selectableItemBackground" />

            <TextView
                android:id="@+id/btn_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报错"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:padding="8dp"
                android:foreground="?android:attr/selectableItemBackground" />

            <TextView
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一题"
                android:textSize="12sp"
                android:textColor="@color/text_hint"
                android:padding="8dp"
                android:foreground="?android:attr/selectableItemBackground" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>